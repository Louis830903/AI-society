# AI Society 环境变量配置
# ========================
# 复制此文件为 .env 并填入实际值
# cp .env.example .env

# ===================
# DeepSeek API 配置
# ===================
# DeepSeek API 密钥
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# DeepSeek API 基础URL
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ===================
# 默认模型配置
# ===================
# 默认使用的LLM模型
# 可选: deepseek-reasoner (R1), deepseek-chat
DEFAULT_MODEL=deepseek-reasoner

# ===================
# 成本控制
# ===================
# 月度预算（美元）
MONTHLY_BUDGET=200

# ===================
# 时间系统
# ===================
# 时间缩放：现实1分钟 = 游戏 TIME_SCALE 分钟
TIME_SCALE=10

# ===================
# 数据库配置
# ===================
# PostgreSQL 连接URL
DATABASE_URL=postgresql+asyncpg://postgres:aisociety2024@localhost:5432/aisociety

# PostgreSQL 密码（用于 docker-compose）
POSTGRES_PASSWORD=aisociety2024

# ===================
# Redis 配置
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Qdrant 向量数据库配置
# ===================
QDRANT_URL=http://localhost:6333

# ===================
# 应用配置
# ===================
# 调试模式（开发环境设为 true）
DEBUG=true

# 日志级别
LOG_LEVEL=INFO

# ===================
# 智能体配置
# ===================
# 初始智能体数量
INITIAL_AGENT_COUNT=50

# 最大智能体数量
MAX_AGENT_COUNT=100

# 决策间隔（秒）
DECISION_INTERVAL_SECONDS=60
